{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],              // Mapeia corretamente os arquivos em `src`
      "@/tests/*": ["tests/*"]       // Mapeia os arquivos de teste
    }
  },
  "include": ["src/**/*", "tests/**/*"]
}
